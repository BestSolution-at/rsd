{
    "name": "remote-service-description-workspace",
    "description": "Base workspace package",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "scripts": {
        "clean": "npm run clean --workspaces",
        "watch": "tsc -b tsconfig.build.json --watch",
        "build": "tsc -b tsconfig.build.json && npm run build --workspaces",
        "build:clean": "npm run clean && npm run build",
        "langium:generate": "npm run --workspace packages/language langium:generate",
        "langium:watch": "npm run --workspace packages/language langium:watch",
        "test": "npm run --workspace packages/cli test",
        "lint": "eslint ."
    },
    "devDependencies": {
        "@types/koa": "^3.0.1",
        "@types/koa-compose": "^3.2.9",
        "@types/node": "~20.17.48",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "koa": "^3.1.1",
        "koa-compose": "^4.1.0",
        "prettier": "^3.6.2",
        "shx": "~0.4.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.44.1"
    },
    "volta": {
        "node": "20.19.2",
        "npm": "10.8.2"
    },
    "workspaces": [
        "packages/language",
        "packages/cli",
        "packages/extension"
    ]
}
